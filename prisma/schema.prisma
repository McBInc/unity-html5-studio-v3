generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entitlements Entitlement[]
  projects     Project[]
  builds       Build[]

  // NextAuth relations
  accounts       Account[]
  sessions       Session[]
  authenticators Authenticator[]
}

model Entitlement {
  id String @id @default(cuid())

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  email String?

  stripeCustomerId  String? @unique
  stripeSubId       String? @unique
  checkoutSessionId String? @unique

  plan      String    @default("free")
  status    String    @default("inactive")
  expiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([email])
}

model Project {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  builds Build[]

  @@unique([userId, name])
  @@index([userId])
}

model Build {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  buildNumber  Int?
  versionLabel String?
  status       String  @default("scanned")

  // Hybrid scan persistence
  scanResult    Json?
  scannedAt     DateTime?
  quickScore    Int?
  brotliPresent Boolean?
  gzipPresent   Boolean?

  // For later (R2/S3)
  uploadStorageKey String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  launchProfile LaunchProfile?
  fixPacks      FixPack[]

  @@index([userId])
  @@index([projectId])
}

model LaunchProfile {
  id String @id @default(cuid())

  buildId String @unique
  build   Build  @relation(fields: [buildId], references: [id], onDelete: Cascade)

  // ----------------------------
  // Existing fields (KEEP)
  // ----------------------------
  hostProvider        String @default("unknown")
  destinationPlatform String @default("unknown")
  goal                String @default("test")
  monetization        String @default("unknown")

  // ----------------------------
  // NEW: Intelligence targeting
  // ----------------------------
  targetPlatformId String?
  targetPlatform   Platform? @relation(fields: [targetPlatformId], references: [id])

  targetHostId String?
  targetHost   Host?   @relation(fields: [targetHostId], references: [id])

  // Optional extra intent fields (separate from existing strings)
  monetizationIntent   String?
  distributionStrategy String?

  // ----------------------------
  // NEW: Scoring + explanation
  // ----------------------------
  readinessScore         Int?
  platformFitScore       Int?
  hostCompatibilityScore Int?
  recommendationsJson    Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([targetPlatformId])
  @@index([targetHostId])
}

model FixPack {
  id String @id @default(cuid())

  buildId String
  build   Build  @relation(fields: [buildId], references: [id], onDelete: Cascade)

  hostProvider        String
  destinationPlatform String?
  version             String  @default("v1")
  storageKey          String?

  createdAt DateTime @default(now())
}

// ----------------------------
// NEW INTELLIGENCE TABLES
// ----------------------------

model Platform {
  id   String @id @default(cuid())
  name String
  slug String @unique

  // Rules / limits
  initialDownloadMaxMB Int?
  totalBuildMaxMB      Int?
  maxFileCount         Int?
  maxSingleFileMB      Int?

  requiresCompressedBuild Boolean @default(false)

  // Stored as JSON string for simplicity v1 (e.g. '["brotli","gzip"]')
  acceptedCompression String

  requiresSdkInjection Boolean @default(false)
  sdkType              String?

  notes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  launchProfiles LaunchProfile[]
}

model Host {
  id   String @id @default(cuid())
  name String
  slug String @unique

  supportsBrotli             Boolean @default(false)
  supportsGzip               Boolean @default(true)
  requiresManualHeaderConfig Boolean @default(false)
  defaultSpaFallback         Boolean @default(true)
  maxFileSizeMB              Int?
  edgeNetwork                String?
  notes                      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  launchProfiles LaunchProfile[]
}

// ----------------------------
// NEXTAUTH MODELS (required for Email + OAuth)
// ----------------------------

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Optional, only used for WebAuthn; safe to include.
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  Bytes
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}
