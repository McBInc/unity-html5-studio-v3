{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProjectScan",
  "type": "object",
  "required": [
    "kind",
    "scanned_at",
    "inputs",
    "summary",
    "checks"
  ],
  "properties": {
    "kind": {
      "const": "project_scan"
    },
    "scanned_at": {
      "type": "string"
    },
    "inputs": {
      "type": "object",
      "properties": {
        "unity_project": {
          "type": [
            "string",
            "null"
          ]
        },
        "webgl_build": {
          "type": [
            "string",
            "null"
          ]
        },
        "docs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "feasibility_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "recommended_path": {
          "type": "string",
          "enum": [
            "webgl_export",
            "partial_remake",
            "full_remake",
            "streaming"
          ]
        },
        "top_blockers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "top_wins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "severity",
          "status",
          "details"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "medium",
              "high"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "warn",
              "fail",
              "unknown"
            ]
          },
          "details": {
            "type": "string"
          },
          "evidence": {
            "type": [
              "object",
              "null"
            ]
          }
        }
      }
    }
  }
}